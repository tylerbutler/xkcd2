# Top-most EditorConfig file
root = true

# Defaults
[*]
charset = utf-8
indent_style = space
indent_size = 2
tab_width = 2
trim_trailing_whitespace = true
insert_final_newline = true

# Python
[*.py]
indent_style = space
indent_size = 4

# JavaScript/TypeScript
[*.{js,json,jsonc,ts}]
indent_style = space
indent_size = 2

# PowerShell
[*.{ps1,psm,psd}]
indent_style = space
indent_size = 2
