{
  "name": "xkcd2",
  "version": "2.0.0",
  "description": "A starting point for Node.js express apps with TypeScript",
  "engines": {
    "node": ">=16"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tylerbutler/xkcd2"
  },
  "author": "Tyler Butler <tyler@tylerbutler.com>",
  "license": "MIT",
  "scripts": {
    "build:sass": "sass src/css/main.scss dist/css/main.css",
    "build:css": "npm run build:sass && concurrently \"npm run build:css:max\" \"npm run build:css:min\"",
    "build:css:max": "postcss dist/css/main.css --output dist/css/main.max.css --map --use autoprefixer",
    "build:css:min": "postcss dist/css/main.css --output dist/css/main.min.css --map --use autoprefixer cssnano",
    "build:ts": "tsc",
    "build": "concurrently \"npm run build:css\" \"npm run build:ts\"",
    "debug": "npm run build && npm run watch:debug",
    "serve:debug": "nodemon --inspect dist/server.js",
    "serve": "npm run start",
    "start": "node dist/server.js --port 3001",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "watch:debug": "concurrently -k -p \"[{name}]\" -n \"Sass,Css,TypeScript,Node\" -c \"yellow.bold,red,cyan.bold,green.bold\" \"npm run watch:sass\" \"npm run watch:css\" \"npm run watch:ts\" \"npm run serve:debug\"",
    "watch:node": "nodemon dist/server.js",
    "watch:sass": "sass --watch --recursive src/css/main.scss dist/css/main.css",
    "watch:css": "postcss dist/css/main.css --output dist/css/main.min.css --map --use autoprefixer --verbose --watch",
    "watch:test": "npm run test -- --watchAll",
    "watch:ts": "tsc -w",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,Css,TypeScript,Node\" -c \"yellow.bold,red,cyan.bold,green.bold\" \"npm run watch:sass\" \"npm run watch:css\" \"npm run watch:ts\" \"npm run watch:node\""
  },
  "dependencies": {
    "compression": "^1.7.4",
    "dotenv": "^8.0.0",
    "errorhandler": "^1.5.1",
    "express": "^4.18.2",
    "lusca": "^1.6.1",
    "node-fetch": "^2.6.0",
    "nodemon": "^1.19.1",
    "nunjucks": "^3.2.0",
    "postcss": "^8.4.24",
    "typogr": "^0.6.8"
  },
  "devDependencies": {
    "@types/compression": "0.0.36",
    "@types/dotenv": "^6.1.1",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.17.17",
    "@types/lusca": "^1.5.0",
    "@types/node": "^16.0.3",
    "@types/node-fetch": "^2.3.4",
    "@types/nunjucks": "^3.1.1",
    "@types/request": "^2.48.1",
    "@types/shelljs": "^0.8.5",
    "autoprefixer": "^10.4.14",
    "bulma": "^0.7.5",
    "bulma-badge": "^3.0.1",
    "bulma-divider": "^0.2.0",
    "concurrently": "^4.1.0",
    "cssnano": "^4.1.10",
    "postcss-cli": "^10.1.0",
    "postcss-load-config": "^4.0.1",
    "postcss-sorting": "^8.0.2",
    "sass": "^1.63.2",
    "sass-lint": "^1.13.1",
    "stylelint": "^10.0.1",
    "stylelint-config-recommended-scss": "^3.3.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-order": "^3.0.0",
    "stylelint-scss": "^3.6.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  }
}
