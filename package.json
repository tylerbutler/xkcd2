{
  "name": "xkcd2",
  "version": "0.1.0",
  "description": "A starting point for Node.js express apps with TypeScript",
  "repository": {
    "type": "git",
    "url": "https://github.com/tylerbutler/xkcd2"
  },
  "author": "Tyler Butler <tyler@tylerbutler.com>",
  "license": "MIT",
  "scripts": {
    "build-sass": "node-sass src/css/main.scss dist/css/main.css",
    "build-ts": "tsc",
    "build": "npm run build-sass && npm run build-ts && npm run tslint",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "serve": "node dist/server.js",
    "start": "npm run serve",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "watch-node": "nodemon dist/server.js",
    "watch-sass": "node-sass -w src/css/main.scss dist/css/main.css",
    "watch-test": "npm run test -- --watchAll",
    "watch-ts": "tsc -w",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\""
  },
  "dependencies": {
    "compression": "^1.7.4",
    "dotenv": "^8.0.0",
    "errorhandler": "^1.5.1",
    "express": "^4.16.4",
    "lusca": "^1.6.1",
    "node-fetch": "^2.5.0",
    "nodemon": "^1.19.0",
    "nunjucks": "^3.2.0",
    "typogr": "^0.6.8"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/compression": "0.0.36",
    "@types/lusca": "^1.5.0",
    "@types/node-fetch": "^2.3.3",
    "@types/nunjucks": "^3.1.1",
    "@types/request": "^2.48.1",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.16.1",
    "@types/node": "^12.0.2",
    "@types/shelljs": "^0.8.5",
    "bulma": "^0.7.4",
    "concurrently": "^4.1.0",
    "node-sass": "^4.12.0",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "tslint-microsoft-contrib": "^6.1.1",
    "typescript": "^3.4.5"
  }
}
